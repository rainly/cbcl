<h2>Rediger Login-bruger <%=h @user.login %></h2>

<% form_tag :action => :update, :id => @user do %>
  <%= render :partial => 'form' %>

  <%= submit_tag "Anvend", :name => 'submit[update]', { :class => 'normal' } %>
<% end %>

<%= link_button t('show'), @user, 'user_show' :title => 'Vis bruger' %> |
<%= link_to t('go_back'), users_path, 'user_index' :title => 'Liste af login-brugere' %>
