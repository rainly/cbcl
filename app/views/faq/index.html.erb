<%= javascript_include_tag :defaults %>

<div id="faq" class="container">
	<h1>Spørgsmål &amp; svar</h1>

	<div id="search_fag">
		<% form_remote_tag(:url => {:controller => :faq, :action => 'search'}, :html => {:id => 'faq_search_form'}) do |f| %>
		<% label_tag("search", "Søg") %>
		<% text_field_tag("search", {}, {:size => "15", :class => "btn_gray"}) %>
		<% submit_tag("Søg", :class => "btn_gray") %>
		<% end %>
	</div>


	<div id="right" style="float:right; width:48%; padding-left: 1%;">
	</div>

	<div id="left" style=" width:49%; padding-right: 1%; border-right: 1px solid #ccc;">
		<ol class="sections<%= @action == "order" ? " drag" : "" %>" id="section_list">
			<% @sections.each do |@section| %>
			<%= render :partial => 'full_section' %>
			<% end %>
		</ol>

		<% if current_user.has_access? :faq_edit %>
		<div id="bottom-left">
			<div class="actions">
				<% if @action == 'order' %>
				<%= link_to_remote 'Færdig!', :url => {:controller => :faq, :action => 'done_ordering_sections', :id => @section} %>
				<% elsif @sections.size > 1 %>
				<%= link_to 'Reorganiser liste', {:controller => :faq, :action => 'order_sections'} %><br/>
				<% else %>
				<%= link_to 'Index', {:controller => :faq, :action => 'index'} %><br/>
				<% end %>

				<% unless @action == 'order' %>
				<%= link_to 'Nyt afsnit', {:controller => :faq, :action => 'new_section'} %>
				<% end %>
			</div>
		</div>
		<% end %>

		<% if @action == 'order' %>
		<div id="sortable">
			<%= sortable_element 'section_list', :url => {:controller => :faq, :action => 'sort_sections'}, 
			:complete => visual_effect(:highlight, 'section_list') 
			%> 
		</div>
		<% end %>

	</div>
	<p>
		<br/>
		<br/>
	</p>
</div>