
<h2>Bruger &quot;<%= h @user.login %>&quot;</h2>

<!-- <h3>Bruger Data</h3> -->

<dl>
    <dt>Navn</dt>
    <dd><%= h @user.name %></dd>

    <dt>Login</dt>
    <dd><%= h @user.login %></dd>

    <dt>Email-adresse</dt>
    <dd><%= h @user.email %></dd>

    <dt>ID</dt>
    <dd><%= @user.id %></dd>

    <dt><%= t('created') %></dt>
    <dd><%= @user.created_at.to_formatted_s(:long) %></dd>

    <dt><%= t('updated') %></dt>
    <dd><%= @user.updated_at.to_formatted_s(:long) %></dd>

    <dt>Sidste Login</dt>
    <dd><%= @user.last_logged_in_at.to_formatted_s(:long) %></dd>

    <dt><%= t('state') %></dt>
    <dd><%= @user.status %></dd>
</dl>

<h3><%= t('roles') %></h3>

<% if @user.roles.empty? %>
    <p><%= t('no_roles') %></p>
<% else %>
	<% roller = []
	   @roles = @user.roles %>
	<%= render :partial => "shared/roles" %>
<% end %>

<h3><%= t('groups') %></h3>

<% if @user.groups.empty? %>
    <p><%= t('no_groups') %></p>
<% else
 		@groups = @user.groups %>
	<%= render :partial => 'shared/show_groups' %>
<% end %>


<% if current_user.has_access? :role_show_all %>
    <h3>Alle tildelte roller</h3>
	<% @roles = @user.all_roles %>
    <% if @roles.empty? %>
        <p><%= t('no_roles') %></p>
	<% else %>
	<%= render :partial => "shared/roles" %>
	<% end %>
<% end %>


<% if current_user.has_access? :user_edit_delete %>
<%= link_to t('delete'), delete_user_path(@user) %>
<%= link_to t('edit'), edit_user_path(@user) %>
<% end %>
<%= link_to t('go_back'), users_path %>