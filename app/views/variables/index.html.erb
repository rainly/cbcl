<h1>Listing variables</h1>

<%= link_button 'Ny variabel', new_variable_path, 'variable_new' %>

<table>
  <tr>
    <th>Var</th>
    <th>Item</th>
    <th>Row</th>
    <th>Col</th>
    <th>Skema</th>
    <th>Spg</th>
  </tr>

<% for variable in @variables %>
  <tr>
    <td><%=h variable.var %></td>
    <td><%=h variable.item %></td>
    <td><%=h variable.row %></td>
    <td><%=h variable.col %></td>
    <td><%=h survey_short(variable.survey) %></td>
    <td><%=h variable.question.number.to_roman.downcase %></td>
    <td><%= link_to t('show'), variable %></td>
    <td><%= link_to t('edit'), edit_variable_path(variable) %></td>
    <td><%= link_to t('destroy'), variable, :confirm => t('are_you_sure?'), :method => :delete %></td>
  </tr>
<% end %>
</table>

<br>

<%= link_button 'Ny variabel', new_variable_path, 'variable_new' %>
