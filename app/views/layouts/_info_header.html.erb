<div id="infoheader">
	<div id='centertitle'><%= @center_title %></div>
	<div class="info">
		<% if current_user && current_user.access?(:layout_show_login_info) %>
			Navn: <%= current_user.name %><br>
			Rolle: <%= current_user.roles.first.title %>
			<% if shadow_user? %>
				<div class="last">
					<%= link_to img_tag_html4('door.png', :border => 0, :class => 'icon', :alt => 'GÃ¥ tilbage til egen bruger', :title => 'Log tilbage til egen bruger'), shadow_logout_path %>
				</div>
			<% end %>
			<br>
			<% if current_user.last_logged_in_at == current_user.created_at %>
				<span style="color: green; padding-left: 200px; padding-top: 100px;">Husk at skifte dit password</span>
			<% end %>
			<% if current_user.status =~ /password/ %>
				<span style="color: red;"><%= link_to t('change_password'), edit_user_url(current_user), :style => "color: red;" %></span>
			<% end %>
		<% end %>
	</div>
</div>

