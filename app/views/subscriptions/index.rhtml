<h2>Liste af abonnementer</h2>

<% @centers.each do |@group| %>
  <h3>Center:
 	<%= link_to( h(@group.title), center_path(@group) ) %></h3>
	
	<% if @group.subscriptions.length > 0 %>
		<% @copies = @group.subscription_summary(@options) %>
		<%= render :partial => "shared/subscription_summary", :object => @copies %>
	
	<% else %>
	<h4>Ingen abonnementer</h4>
	<% end %>
	
	<div class="commands">
		<% if @group.subscriptions.length > 0 %>
		<% if @user.has_access? :subscription_new_edit %>
			<%= link_to 'TilfÃ¸je/Ã¦ndre abonnementer', new_subscription_path(@group), :title => 'Forandr abonnementer' %>
		<% end %>
		<%= link_to_function "Vis/gem detaljer", visual_effect(:toggle_blind, "subscription_details_#{@group.id}") %>

		<div id="subscription_details_<%= @group.id %>" style="display: none;">
			<%= render :partial => "shared/subscription_list", :object => @group %>
		</div>
		<% else %>
			<% if @user.has_access? :subscription_new_edit %>
				<%= link_to 'Nyt abonnement', new_subscription_path(@group), :title => 'Opret abonnement' %>
			<% end %>
		<% end %>
	</div>

	<p>
	<p>
<% end %>
